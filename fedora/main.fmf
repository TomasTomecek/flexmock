summary: Run tests on Fedora Linux
provision:
    how: local
/upstream:
    summary: Run upstream tests inside Fedora Linux environment
    prepare:
    - name: packages
      how: install
      package:
      - python3-pytest
      - python3-twisted
      - make
    execute:
        how: tmt
        script: pwd && ls -lha && make -C ../tests test
